
@using Microsoft.AspNetCore.Components
@using ContainerDeck.Shared.Models

<div class="dialog-body">
    <div class="form-group">
        <label for="agentName" style="width: 200px;">Name:</label>
        <input type="text" id="agentName" @bind="Agent.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="agentAddress" style="width: 200px;">Address:</label>
        <input type="text" id="agentAddress" @bind="Agent.Address" class="form-control" />
    </div>
</div>

@code {
    [Parameter]
    public Agent Agent { get; set; } = new Agent("Local", "http://localhost:5000");

}